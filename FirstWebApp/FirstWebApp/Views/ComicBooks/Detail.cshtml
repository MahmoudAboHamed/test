@{
    Layout = null;

    var seriesTitle = "The Amazing Hero";
    var issueNumber = 700;
    var description = "<p>The best Book in World <strong>HaHaHaHa</strong></p> ";
    var artists = new string[]
    {
        "script : ana",
        "Pencils : ana",
        "Inks : ana",
    };
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>
    <div>
        <h1>@seriesTitle</h1>
        <h2>Issue #@issueNumber</h2>
        

        <h5>Description</h5>
        <div>@Html.Raw(description)</div>
        
        @if (artists.Length > 0)
        {

           <h5>Artist : </h5>
             <div>
                <ul>
                  @foreach (var artist in artists)
                  {
                    <li>
                         <text>@artist </text>
                   </li>
                   }
               </ul>

           </div>
         }
    </div>
</body>
</html>
